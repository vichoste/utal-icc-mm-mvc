@using Utal.Icc.Mm.Mvc.Models

@model IccStudentViewModel

@{
	this.ViewData["Title"] = "Mi perfil de estudiante";
	var practiceOptions = new List<SelectListItem> {
		new SelectListItem { Text = "Actualmente no estoy realizando práctica", Value = "0" },
		new SelectListItem { Text = "Estoy realizando la primera práctica", Value = "1" },
		new SelectListItem { Text = "Estoy realizando la segunda práctica", Value = "2" }
	};
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm("Student", "Profile", new { area = "Account" })) {
						@this.Html.AntiForgeryToken()
						<div class="row">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.UniversityId, new { @class = "form-label" }):
									@this.Html.DisplayFor(m => m.UniversityId, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.RemainingCourses, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.RemainingCourses, new { @class = "form-control" })
								</div>
								<div class="form-check mb-3">
									@this.Html.LabelFor(m => m.CurrentPractice, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.CurrentPractice, new { @class = "form-control", @type = "number", @min = "0", @max = "2", @required = "required" })
								</div>
								<div class="form-check mb-3">
									@this.Html.LabelFor(m => m.IsWorking, new { @class = "form-check-label" })
									@this.Html.CheckBoxFor(m => m.IsWorking, new { @class = "form-check-input" })
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("Cancelar", "Index", "Profile", new { area = "Account" }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-primary">Actualizar perfil</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>