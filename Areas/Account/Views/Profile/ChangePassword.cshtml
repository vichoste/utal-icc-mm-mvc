@using Utal.Icc.Mm.Mvc.Areas.Account.Models.Profile

@model ChangePasswordViewModel

@{
	this.ViewData["Title"] = "Cambiar contraseña";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm("ChangePassword", "Profile", new { area = "Account" })) {
						@this.Html.AntiForgeryToken()
						<div class="row">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", required = "required", minlength = "6" })
									<div class="invalid-feedback">Por favor ingresa una contraseña que tenga al menos 6 carácteres.</div>
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", required = "required", minlength = "6", maxlength = "20", pattern = "^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9]).{6,20}$" })
									<div class="invalid-feedback">Por favor ingresa una nueva contraseña que tenga un largo de 6 a 20 carácteres. Debe contener al menos una letra mayúscula, una letra minúscula y un número.</div>
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "form-label" })
									@this.Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", required = "required", minlength = "6", maxlength = "20", pattern = "^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9]).{6,20}$" })
									<div class="invalid-feedback">Por favor confirma tu nueva contraseña.</div>
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("Cancelar", "Index", "Profile", new { area = "Account" }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-primary">Cambiar contraseña</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>