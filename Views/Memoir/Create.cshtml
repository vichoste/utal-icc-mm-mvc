@using Utal.Icc.Mm.Mvc.Models

@model IccMemoir

@{
	this.ViewData["Title"] = "Crear memoria";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm("Create", "Memoir", new { area = string.Empty })) {
						@this.Html.AntiForgeryToken()
						<div class="row">
							<div class="col">
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Title, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
								</div>
								<div class="form-group mb-3">
									@this.Html.LabelFor(m => m.Description, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
								</div>
								@if (this.User.IsInRole("IccRegular")) {
									@this.Html.LabelFor(m => m.Guide, new { @class = "form-label" })

								} else if (this.User.IsInRole("IccGuide")) {
									@this.Html.LabelFor(m => m.Requierments, new { @class = "form-label" })
									@this.Html.TextBoxFor(m => m.Requierments, new { @class = "form-control" })
								}
							</div>
						</div>
						<div class="row text-center">
							<div class="col">
								<div class="btn-group">
									@this.Html.ActionLink("Cancelar", "Index", "Memoir", new { area = string.Empty }, new { @class = "btn btn-secondary" })
									<button type="submit" class="btn btn-success">Crear</button>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>