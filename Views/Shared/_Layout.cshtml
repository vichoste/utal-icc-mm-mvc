@{
	this.ViewData["MainTitle"] = "Sistema de Gestión de Memorias - Ingeniería Civil en Computación - Universidad de Talca";
	this.ViewData["MetaDescription"] = "Sistema de Gestión de Memorias - Ingeniería Civil en Computación - Universidad de Talca";
	this.ViewData["MetaAuthor"] = "Vicente \"vichoste\" Calderón";
	this.ViewData["MetaKeywords"] = "Mm, ICC, UTAL, Ingeniería Civil en Computación, Universidad de Talca, Vicente Calderón, vichoste";
	this.ViewData["AppClass"] = "app-footer-fixed";
}

<!DOCTYPE html>
<html lang="es" @this.ViewData["HtmlAttribute"]>
<head>
	<meta charset="utf-8" />
	<title>@this.ViewData["Title"] - @this.ViewData["MainTitle"]</title>
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta name="description" content="@this.ViewData["MetaDescription"]" />
	<meta name="author" content="@this.ViewData["MetaAuthor"]" />
	<meta name="keywords" content="@this.ViewData["MetaKeywords"]" />
	@this.RenderSection("MetaTag", required: false)
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link href="~/css/vendor.min.css" rel="stylesheet" />
	<link href="~/css/app.min.css" rel="stylesheet" />
	<link href="~/css/site.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	@this.RenderSection("Styles", required: false)
</head>
<body class="@this.ViewData["BodyClass"]">
	<div id="app" class="app @this.ViewData["AppClass"]">
		@if (this.ViewData["AppWithoutHeader"] == null) {
			<partial name="_Header" />
		}
		@if (this.ViewData["AppWithoutSidebar"] == null) {
			<partial name="_Sidebar" />
		}
		@if (this.ViewData["AppWithoutContainer"] == null) {
			<div id="content" class="app-content @this.ViewData["AppContentClass"]">
				@this.RenderBody()
				<a href="#" data-click="scroll-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>
			</div>
		} else {
			@this.RenderBody()
			<a href="#" data-click="scroll-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>
		}
		@this.RenderSection("OutterAppContainerContent", required: false)
		@if (this.ViewData["AppWithFooter"] != null) {
			<partial name="_Footer" />
		}
		<partial name="_ThemePanel" />
	</div>
	<script>
		window.paceOptions = {
			ajax: { ignoreURLs: ['mainHub', '__browserLink', 'browserLinkSignalR'], trackWebSockets: false }
		};
	</script>
	<script src="~/js/vendor.min.js"></script>
	<script src="~/js/app.min.js"></script>
	@this.RenderSection("Scripts", required: false)
</body>
</html>