@{
	this.ViewData["Title"] = "Iniciar sesión";
}

<div class="container">
	<partial name="_Alerts" />
	<div class="row justify-content-center">
		<div class="col-10">
			<div class="card">
				<div class="card-header text-center">@this.ViewData["Title"]</div>
				<div class="card-body">
					@using (this.Html.BeginForm("Login", "Account", FormMethod.Post)) {
						@this.Html.AntiForgeryToken()
						<div class="form-group mb-3">
							@this.Html.Label("email", "E-mail", new { @class = "form-label" })
							@this.Html.TextBox("email", new { @class = "form-control", required = "required", type = "email" })
						</div>
						<div class="form-group mb-3">
							@this.Html.Label("password", "Contraseña", new { @class = "form-label" })
							@this.Html.Password("password", new { @class = "form-control", required = "required" })
						</div>
						<div class="form-check">
							@this.Html.CheckBox("rememberMe", new { @class = "form-check-input" })
							@this.Html.Label("rememberMe", "Recuérdame", new { @class = "form-check-label" })
						</div>
						<div class="row text-center">
							<div class="col">
								<button type="submit" class="btn btn-primary">Iniciar sesión</button>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>